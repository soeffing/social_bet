	  $('#abroad-team').text($(this).attr('abroad-team'));
	  $('#date').text($(this).attr('date')); 
	  $('#league').text($(this).attr('league'));
    $('input#bettle_fixture_id').val($(this).attr('id').split('_')[1]);

    
    
